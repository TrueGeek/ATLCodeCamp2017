<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:BringMeSoup.mobile.ViewModels"
    x:Class="BringMeSoup.mobile.Pages.SickPage">
    
    <ContentPage.BindingContext>
        <viewModels:SickViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <StackLayout 
            Orientation="Vertical"
            VerticalOptions="Center"
            Spacing="20"
            Padding="20">

            <Button 
                Command="{Binding SendRequest}"
                IsVisible="{Binding RequestIsPending, Converter={StaticResource InverseBooleanConverter}}"
                Text="Request Soup"
                TextColor="White"
                FontSize="30"
                BackgroundColor="Black"/>

            <Label Text="Soup Inbound!" FontSize="Large" IsVisible="{Binding RequestIsPending}" />

            <Label Text="You Are:" />
            <Label Text="{Binding CurrentUserEmail}" />
            <Label Text="Your Code:" />
            <Label Text="{Binding SickCode}" />

            <Button 
                Command="{Binding LogOff}"
                Text="Log Off"
                TextColor="White"
                FontSize="30"
                BackgroundColor="Black"/>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>